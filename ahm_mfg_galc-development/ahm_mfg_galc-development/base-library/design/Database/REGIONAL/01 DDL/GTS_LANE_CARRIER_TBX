------------------------------------------------
-- DDL Statements for Table "GALADM  "."GTS_LANE_CARRIER_TBX"
------------------------------------------------

DROP TRIGGER GALADM.LANE_CARRIER_TR1;
DROP TRIGGER GALADM.LANE_CARRIER_TR2;
DROP TABLE GALADM.GTS_LANE_CARRIER_TBX;

CREATE TABLE "GALADM  "."GTS_LANE_CARRIER_TBX"  (
		  "TRACKING_AREA" VARCHAR(10) NOT NULL , 
		  "LANE_ID" VARCHAR(20) NOT NULL , 
		  "LANE_POSITION" TIMESTAMP NOT NULL , 
		  "LANE_CARRIER" VARCHAR(40) , 
		  "DISCREPANCY_STATUS" SMALLINT NOT NULL WITH DEFAULT 0 , 
		  "CREATE_TIMESTAMP" TIMESTAMP , 
		  "UPDATE_TIMESTAMP" TIMESTAMP )   
		 IN GALTBSREF11
		 INDEX IN GALTBSIDX4 ; 

COMMENT ON TABLE "GALADM  "."GTS_LANE_CARRIER_TBX" IS 'GTS Lane Carrier';


-- DDL Statements for Primary Key on Table "GALADM  "."GTS_LANE_CARRIER_TBX"

ALTER TABLE "GALADM  "."GTS_LANE_CARRIER_TBX" 
	ADD CONSTRAINT "PK_GTS_LANE_CARRIER" PRIMARY KEY
		("TRACKING_AREA",
		 "LANE_ID",
		 "LANE_POSITION");

-- DDL Statements for Foreign Keys on Table "GALADM  "."GTS_LANE_CARRIER_TBX"

CREATE TRIGGER GALADM.LANE_CARRIER_TR1 NO CASCADE BEFORE
INSERT ON GALADM.GTS_LANE_CARRIER_TBX REFERENCING NEW AS A FOR EACH ROW SET CREATE_TIMESTAMP = CURRENT_TIMESTAMP;

CREATE TRIGGER GALADM.LANE_CARRIER_TR2 NO CASCADE BEFORE
UPDATE ON GALADM.GTS_LANE_CARRIER_TBX REFERENCING NEW AS A FOR EACH ROW SET UPDATE_TIMESTAMP = CURRENT_TIMESTAMP;
