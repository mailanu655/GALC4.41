	<LoggedButton fx:id="cMode" text="Mode" GridPane.columnIndex="0" GridPane.rowIndex="9"
					onAction="#handleButtonAction">
			<graphic>
			<ImageView fx:id="cMode_icon"  xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
				<Image fx:id="cMode_img" smooth="false" url="resource/images/bbscales/Check-icon.png" />
			</ImageView>
			</graphic>
	</LoggedButton>

	<LoggedButton fx:id="clear" text="Clear" GridPane.columnIndex="6" GridPane.rowIndex="9"
		onAction="#handleButtonAction">
			<graphic>
			<ImageView xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
				<Image smooth="false" url="resource/images/bbscales/X-icon.png" />
			</ImageView>
			</graphic>					
