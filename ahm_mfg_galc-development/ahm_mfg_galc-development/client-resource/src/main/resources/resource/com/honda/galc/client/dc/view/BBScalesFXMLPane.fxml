	<VBox spacing="2" alignment="center" 
		GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.rowSpan="2" GridPane.columnSpan="2">
		<LoggedLabel text="Left cross" styleClass="label_u"/>     
		<LoggedTextField fx:id="LCr_val" editable="false" maxWidth="100"/>
		<HBox spacing="2" alignment="center">
			<LoggedLabel text="min/max:" styleClass="range_label"/>
			<LoggedLabel id="lbl_lcr_min" text="min" />
			<LoggedLabel id="lbl_lcr_separator" text="/" />
			<LoggedLabel id="lbl_lcr_max" text="max" />
		</HBox>
	</VBox>

	<VBox spacing="2" alignment="center" 
		GridPane.columnIndex="3" GridPane.rowIndex="7" GridPane.rowSpan="2">
		<LoggedLabel text="Cross diff" styleClass="label_u"/>     
		<LoggedTextField fx:id="Cr_diff" editable="false" maxWidth="100"/>
		<HBox spacing="2" alignment="center">
			<LoggedLabel text="min/max:" styleClass="range_label"/>
			<LoggedLabel id="lbl_crdiff_min" text="min" />
			<LoggedLabel id="lbl_crdiff_separator" text="/" />
			<LoggedLabel id="lbl_crdiff_max" text="max" />
		</HBox>
	</VBox>

	<!--
    <LoggedTextField fx:id="RCr_val" editable="false" 
                    GridPane.columnIndex="4" GridPane.rowIndex="7" GridPane.rowSpan="2" maxWidth="100"  minHeight="40"  />
