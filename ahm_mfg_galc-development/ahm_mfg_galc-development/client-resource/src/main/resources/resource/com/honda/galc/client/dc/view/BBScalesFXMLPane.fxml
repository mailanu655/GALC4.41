	<VBox spacing="2" alignment="center" 
		GridPane.columnIndex="5" GridPane.rowIndex="7" GridPane.rowSpan="2" GridPane.columnSpan="2">
		<LoggedLabel text="Right cross" styleClass="label_u"/>     
		<LoggedTextField fx:id="RCr_val" editable="false" maxWidth="100"/>
		<HBox spacing="2" alignment="center">
			<LoggedLabel text="min/max:" styleClass="range_label"/>
			<LoggedLabel id="lbl_rcr_min" text="min" />
			<LoggedLabel id="lbl_rcr_separator" text="/" />
			<LoggedLabel id="lbl_rcr_max" text="max" />
		</HBox>
	</VBox>

