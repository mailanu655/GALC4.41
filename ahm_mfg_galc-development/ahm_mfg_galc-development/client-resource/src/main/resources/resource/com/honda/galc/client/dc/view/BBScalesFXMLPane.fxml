	-->
	<VBox spacing="2" alignment="center" 
		GridPane.columnIndex="3" GridPane.rowIndex="9" GridPane.rowSpan="2">
		<LoggedLabel text="Total"  styleClass="label_u"/>     
		<LoggedTextField fx:id="Tot_val" editable="false" maxWidth="125"/>
		<HBox spacing="2" alignment="center">
			<LoggedLabel text="min/max:" styleClass="range_label"/>
			<LoggedLabel id="lbl_tot_min" text="min" />
			<LoggedLabel id="lbl_tot_separator" text="/" />
			<LoggedLabel id="lbl_tot_max" text="max" />
		</HBox>
	</VBox>

