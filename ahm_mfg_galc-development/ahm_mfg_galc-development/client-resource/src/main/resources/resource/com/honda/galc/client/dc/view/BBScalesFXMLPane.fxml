<fx:root type="javafx.scene.layout.BorderPane" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2">
<center>
<GridPane id="bbgrid_01" xmlns:fx="http://javafx.com/fxml"
          hgap="10" vgap="10" >
<padding><Insets top="25" right="25" bottom="10" left="15"/></padding>
    <LoggedLabel id="vin-label" styleClass="vin_label" text="VIN" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <LoggedTextField fx:id="vin" editable="true" 
                   GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.columnSpan="4" />
    <LoggedLabel text="LFrt Max:" GridPane.columnIndex="0" GridPane.rowIndex="0" maxWidth="100" />
    <LoggedTextField fx:id="LFrt_max" editable="false" 
                   GridPane.columnIndex="1" GridPane.rowIndex="0" maxWidth="50" />

    <LoggedLabel text="LFrt Min:" GridPane.columnIndex="0" GridPane.rowIndex="1" maxWidth="100" />
    <LoggedTextField fx:id="LFrt_min" editable="false" 
                    GridPane.columnIndex="1" GridPane.rowIndex="1" maxWidth="50" />

    <LoggedTextField fx:id="LFrt_val" editable="false" styleClass="scaleweight" 
                    GridPane.columnIndex="2" GridPane.rowIndex="0" GridPane.rowSpan="2" maxWidth="100"  minHeight="40"   />

    <ImageView id="cc_car_img" fitHeight="150" fitWidth="220" GridPane.columnIndex="3" GridPane.rowIndex="0" GridPane.rowSpan="4" preserveRatio="true" cache="" >
        <image>
            <Image url="resource/images/bbscales/green_nsx.png" />
        </image>
    </ImageView>
    <LoggedTextField fx:id="RFrt_val" editable="false"  styleClass="scaleweight" 
                     GridPane.columnIndex="4" GridPane.rowIndex="0" GridPane.rowSpan="2" maxWidth="100" minHeight="40"  />
    <LoggedLabel text="RFrt Max:" GridPane.columnIndex="6" GridPane.rowIndex="0"  maxWidth="100"/>
    <LoggedTextField fx:id="RFrt_max" editable="false" 
                    GridPane.columnIndex="5" GridPane.rowIndex="0" maxWidth="50"/>

    <LoggedLabel text="RFrt Min:" GridPane.columnIndex="6" GridPane.rowIndex="1" maxWidth="100" />
    <LoggedTextField fx:id="RFrt_min" editable="false" 
                    GridPane.columnIndex="5" GridPane.rowIndex="1" maxWidth="50"/>

    <LoggedLabel text="LRr Max:" GridPane.columnIndex="0" GridPane.rowIndex="4" maxWidth="100" />
    <LoggedTextField fx:id="LRr_max" editable="false" 
                   GridPane.columnIndex="1" GridPane.rowIndex="4" maxWidth="50" />

    <LoggedLabel text="LRr Min:" GridPane.columnIndex="0" GridPane.rowIndex="5" maxWidth="100" />
    <LoggedTextField fx:id="LRr_min" editable="false" 
                    GridPane.columnIndex="1" GridPane.rowIndex="5" maxWidth="50" />

    <LoggedTextField fx:id="LRr_val" editable="false"  styleClass="scaleweight" 
                    GridPane.columnIndex="2" GridPane.rowIndex="4" GridPane.rowSpan="2" maxWidth="100"  minHeight="40"   />

    <LoggedTextField fx:id="RRr_val" editable="false"  styleClass="scaleweight" 
                    GridPane.columnIndex="4" GridPane.rowIndex="4" GridPane.rowSpan="2" maxWidth="100"  minHeight="40"   />
    <LoggedLabel text="RRr Max:" GridPane.columnIndex="6" GridPane.rowIndex="4"  maxWidth="100"/>
    <LoggedTextField fx:id="RRr_max" editable="false" 
                    GridPane.columnIndex="5" GridPane.rowIndex="4" maxWidth="50"/>

    <LoggedLabel text="RRr Min:" GridPane.columnIndex="6" GridPane.rowIndex="5" maxWidth="100" />
    <LoggedTextField fx:id="RRr_min" editable="false" 
                    GridPane.columnIndex="5" GridPane.rowIndex="5" maxWidth="50"/>    
